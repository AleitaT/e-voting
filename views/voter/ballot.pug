//- ballot.pug

extends ../layout.pug

block contents
    div.contents
        h1 E-Vote
        h2 Your Ballot

        div.contents
            h4 Name
            p#voterName #{user.firstName} #{user.lastName}

            h4 Address
            p#voterAddress 

            h4 Token
            p#voterAuthToken #{user.token}
        
        br

        form#postBallot(method='' action='')
            div.col-sm-8#ballotContent
                       
                for item in elections.offices
                    div.form-group
                        h3 #{item.position}
                        for candidate, i in item.candidates
                            label(for="#{item.position}") #{candidate.name}
                            input(type="radio" name#{item.position} value="#{candidate}#{i}")
                            br
                br
                div.form-group
                    button#submit(type='button' onclick="getBallot()") Submit

    script
        include ../../src/ballotScript.js
